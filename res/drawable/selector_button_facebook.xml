<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selector para los botones de facebook(my_schedules) -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:centerColor="@color/gray_bus_grid" android:endColor="@color/gray_map_background" android:startColor="@color/gray_map_background" />
        </shape></item>

    <item android:state_pressed="false"><shape android:shape="rectangle">
             <corners android:radius="3dp" />
             <padding
        android:bottom="10dp"
        android:left="5dp"
        android:right="5dp"
        android:top="10dp" />
            <gradient android:centerColor="#3B5998" android:endColor="#3B5998" android:startColor="#3B5998" />
        </shape></item>
</selector>